# theme
include ~/.config/newsboat/dark

# reload on start
auto-reload yes
# limit the max items per feed to 50
max-items 50

# external browser
browser "/usr/bin/firefox %u"

# unbind keys to make room for vim binds
unbind-key ENTER
unbind-key j
unbind-key J
unbind-key k
unbind-key K

# bind keys
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

